<Window x:Class="Authoservices.Pages.WindowActivetedAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Authoservices.Pages"
        mc:Ignorable="d" Icon="res/service_logo.ico"
        Title="Компания Дырявое Ведро - окно активации режима Администратора" Height="220" Width="450"
        FontFamily="Tw Cen MT" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <StackPanel>
                <TextBlock Text="Введите пароль" FontSize="20" TextAlignment="Center"
                    Margin="0 40 0 0"/>

                <TextBox x:Name="PasswordAdmin" FontSize="15" Margin="0 20 0 0"
                      Width="230" Height="30"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Button x:Name="OpenSessiaAdministrator" Content="Активировать"
             Width="180" Height="30" Click="OpenSessiaAdministratorClick"
                    Background="#FFFFFFE1"/>
        </Grid>
    </Grid>
</Window>
